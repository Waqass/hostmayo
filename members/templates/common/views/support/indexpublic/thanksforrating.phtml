        <br />
        <input type="submit" class="btn" name="send" value="<?php echo $this->user->lang("Send Additional Comment");?>">
    </form>
<?php elseif($this->showThanks): ?>
    <h1><?php echo $this->user->lang("Thank you for your feedback");?></h1>
    <div><?php echo $this->user->lang("Your comments have been submitted");?></div>
<?php else:
    echo "<h1>".$this->user->lang('There was an error with this request')."</h1>";
    if (isset($this->badTicket)) { echo "<h2>".$this->user->lang("The referred ticket does not exist")."</h2>"; }
