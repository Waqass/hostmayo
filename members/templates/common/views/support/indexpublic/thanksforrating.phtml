    if (isset($this->badHash)) { echo "<h2>".$this->user->lang("The hash provided was invalid")."</h2>"; }
    if (isset($this->badRate)) { echo "<h2>".$this->user->lang("Nice try but that was an invalid rate")."</h2>"; }
